<!doctype html>
<html lang=fr>
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{% block title %}{% endblock %}</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Ubuntu:300,400,400i,500,700" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
</head>
<body>

{% block header %}

    <header class="mb-5">
        <div class="container-fluid header">
            <div class="row text-center align-items-center text-light">
                <div class="offset-1 col-2 text-center pt-2 pb-2">
                    <a href="{{ path('homepage') }}">
                        <img src="{{ asset('img/logobrand.png') }}" class="img-fluid" >
                    </a>
                </div>

                <div class="col-1 offset-3 tbp"><a href="{{ path('articles') }}" class="tbp">Articles</a></div>
                <div class="col-1 tbp"><a href="{{ path('products') }}" class="tbp">Matériel</a></div>
                <div class="col-1 tbp"><a href="{{ path('contact') }}" class="tbp">Contact</a></div>
                {% if app.user %}
                    <div class="col-1 font-weight-bold tbp prof">
                        {{ app.user.username }}
                    <div class="col-1 prof2">
                        <div>
                            <a href="{{ path('profile') }}" class="tbp tbpmin">
                            Profil
                            </a>
                        </div>
                        <div>
                            <a href="{{ path('fos_user_security_logout') }}" class="tbp tbpmin">
                            Déconnexion
                            </a>
                        </div>
                    </div>
                    </div>
                    <div class="col-2">
                        <form action="{{ path('research_articles') }}" method="get" class="d-flex align-items-center">
                            <input name="research" type="text" placeholder="Articles" class="mr-4">
                            <input type="image" name="submit" src="{{ asset("img/search.svg") }}" style="width: 10%">
                        </form>
                    </div>
                {% else %}
                    <div class="col-1 tbp">
                        <a href="{{ path('fos_user_security_login') }}" class="tbp">
                            Connexion
                        </a>
                    </div>
                    <div class="col-2">
                        <form action="{{ path('research_articles') }}" method="get" class="d-flex align-items-center">
                            <input name="research" type="text" placeholder="Articles" class="mr-4">
                            <input type="image" name="submit" src="{{ asset("img/search.svg") }}" style="width: 10%">
                        </form>
                    </div>
                {% endif %}

            </div>
        </div>
    </header>

{% endblock %}

{% block dot %}{% endblock %}

{% block adminmenu %}{% endblock %}

{% block flash %}{% endblock %}

{% block content %}{% endblock %}

{% block footer %}
    <footer>
        <div class="footer container-fluid">
            <div class="row justify-content-between text-center pt-5 pb-5">
                <a href="{{ path('legal_notices') }}"  class="col-4 tbp">
                    <div>Mentions légales</div>
                </a>
                <div class="col-4">© Copyright By Evap'U</div>
                <a href="{{ path('privacy_policy') }}"  class="col-4 tbp">
                    <div>Politique de confidentialité</div>
                </a>
            </div>

        </div>
    </footer>
{% endblock %}

<script
        src="https://code.jquery.com/jquery-3.3.1.js"
        integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
        crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>


<script>
    $(function () {
        $('.JS').click(function(){
            $('.testAbsol').slideToggle(600);
        });

        $(".prof").mouseenter(function() {
            $(".prof2").fadeIn(500)
        });

        $(".prof").mouseleave(function() {
            $(".prof2").fadeOut(500)
        });

    });

</script>
</body>
</html>