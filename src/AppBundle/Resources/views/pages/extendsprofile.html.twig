{% extends '@App/base/index.html.twig' %}

{% block title %}

    Profil

{% endblock %}

{% block content %}

    <div class="container-fluid mb-5">
        <div class="row">
            <div class="col-3 text-center titres">Profil</div>
            <div class="offset-6 col-3 align-self-center text-center">Modifier vos informations</div>
        </div>
    </div>

    <div class="text-center">
        <h1>
            {{ app.user.username }}
        </h1>
        <p>
            {{ app.user.email }}
        </p>
        <p>
            Age : {{ app.user.age }} ans
        </p>
        <p class="mb-5">
            {{ app.user.description }}
        </p>
        <h3 class="mb-5">
            Matériel utilisé :
        </h3>



        <div class="container">
            <div class="row">

                {% for product in app.user.products %}

                    <div class="col-6 mb-5 text-center">
                            <img src="{{ asset('uploads/img/'~product.image) }}" width="50%">
                        <h4>
                            {{ product.name }}
                        </h4>
                    </div>


                {% endfor %}

            </div>
        </div>
    </div>

{% endblock %}