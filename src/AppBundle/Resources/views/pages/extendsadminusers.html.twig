{% extends '@App/base/index.html.twig' %}

{% block title %}

    Admin

{% endblock %}

{% block header %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-12 text-center mt-5">
                Interface d'Admnistration
            </div>
            <div class="col-12 text-center mb-5">
                <a href="{{ path('homepage')}}">
                    - Retour Accueil -
                </a>
            </div>
        </div>
    </div>

{% endblock %}

{% block adminmenu %}

    <div class="container">
        <div class="row text-center pt-5">
            <div class="col-4"><a href="{{ path('admin_articles')}}">Articles</a></div>
            <div class="col-4"><a href="{{ path('admin_users')}}">Utilisateurs</a></div>
            <div class="col-4"><a href="{{ path('admin_products')}}">Produits</a></div>
        </div>
    </div>
    <div class="container">
        <div class="row text-center pt-1 mb-1">
            <div class="col-4">
                <a href="{{ path('new_article')}}">
                    Ajout (<i class="fas fa-plus text-success"></i>)
                </a>
            </div>
            <div class="offset-4 col-4">
                <a href="{{ path('new_product')}}">
                    Ajout (<i class="fas fa-plus text-success"></i>)
                </a>
            </div>
        </div>
    </div>
    <hr class="mb-3">

{% endblock %}

{% block flash %}
    {% for message in app.flashes('notice') %}
        <div class="col-12 text-center mb-3 alert">
            {{ message }}
        </div>
    {% endfor %}
{% endblock %}

{% block content %}

    <div class="container listadminlabel pb-2 pt-2">
        <div class="row text-center">
            <div class="col-4">

                PSEUDO

            </div>
            <div class="offset-1 col-2">

                EMAIL

            </div>
            <div class="offset-2 col-2">
                ACTIONS
            </div>
        </div>
    </div>

    <div class="container listadmin pt-1 pb-1 mb-5">


        {% for user in users %}

            <hr>
            <div class="container mb-4">
                <div class="row">
                    <div class="col-3 text-center">

                        {{ user.username }}

                    </div>
                    <div class="offset-2 col-2 align-self-center text-center">

                        {{ user.email }}

                    </div>

                    <div class="offset-3 align-self-center text-center">
                        <a href="{{ path('del_user', {'id': user.id}) }}">
                            <button type="button" class="btn btn-danger">
                                Supprimer
                            </button>
                        </a>
                    </div>
                </div>
            </div>
            <hr>

        {% endfor %}

    </div>

{% endblock %}

{% block footer %}{% endblock %}
