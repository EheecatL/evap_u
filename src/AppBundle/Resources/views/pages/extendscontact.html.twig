{% extends '@App/base/index.html.twig' %}

{% block title %}

    Contact

{% endblock %}

{% block flash %}
    {% for message in app.flashes('notice') %}
        <div class="col-12 text-center mb-5 alert">
            {{ message }}
        </div>
    {% endfor %}
{% endblock %}

{% block content %}

    <div class="container-fluid mb-5">
        <div class="row">
            <div class="col-lg-3 col-sm-6 text-center titres">Contact</div>
        </div>
    </div>

    <div class="container-fluid">

        <div class="row">

            {% if app.user %}

            <div class="offset-lg-2 col-lg-3 mb-5">

                {{form_start(formContact)}}
                {{form_widget(formContact)}}
                {{form_end(formContact)}}

            </div>

                {% else %}

                    <div class="offset-2 col-3 mb-5 align-self-center">

                        <a href="{{ path('fos_user_security_login') }}">
                            Connectez-vous
                        </a> ou
                        <a href="{{ path('fos_user_registration_register') }}">
                            inscrivez-vous
                        </a>afin de nous contacter.


                    </div>

            {% endif %}

            <div class="offset-lg-1 col-lg-5 mb-5">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2831.089090416276!2d-0.5994857484663078!3d44.79937297899615!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd552763852de039%3A0x1be7c462a925b189!2s588+Cours+de+la+Lib%C3%A9ration%2C+33400+Talence!5e0!3m2!1sfr!2sfr!4v1547045103921" width="100%" height="100%" frameborder="0" style="border:0" allowfullscreen></iframe>
            </div>
        </div>
        <div class="row mt-5 mb-3">
            <div class="offset-lg-4 col-lg-4 text-center contact">
                <br>
                    <h4>
                        Vous pouvez aussi directement nous contacter
                    </h4>
                <br>
                <p>
                    Par mail : evap_u@gmail.com
                </p>
                <p>
                    Par téléphone : 05.23.34.51.45
                    <br>
                <em>
                    (du lundi au vendredi, de 9h à 17h)
                </em>
                </p>
            </div>
        </div>
    </div>

{% endblock %}